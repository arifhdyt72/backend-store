<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th width="5%">NO</th>
            <th>Name Account</th>
            <th>Bank Name</th>
            <th>Account Number</th>
            <th width="25%" class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i = 0; i < bank.length; i++){ %>
            <tr>
                <td><%= i + 1 %></td>
                <td><%= bank[i].name %></td>
                <td><%= bank[i].bankName %></td>
                <td><%= bank[i].accountNumber %></td>
                <td>
                    <form action="/bank/delete/<%= bank[i]._id %>?_method=DELETE" method="post">
                        <a href="/bank/edit/<%= bank[i]._id %>" class="btn btn-success">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                        <button class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        <% } %>
    </tbody>
    <tfoot>
        <tr>
            <th width="5%">NO</th>
            <th>Name Account</th>
            <th>Bank Name</th>
            <th>Account Number</th>
            <th width="20%" class="text-center">Action</th>
        </tr>
    </tfoot>
</table>