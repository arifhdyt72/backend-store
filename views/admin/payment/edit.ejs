<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Payment Type</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/payment">Payment Type</a></li>
                        <li class="breadcrumb-item active">Add Payment Type</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                          <h3 class="card-title">Form input payment type</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form action="/payment/update/<%= payment._id %>?_method=PUT" method="post">
                          <div class="card-body">
                            <div class="form-group">
                                <label for="type">Payment Type</label>
                                <input type="text" class="form-control" value="<%= payment.type %>" name="type" id="type" placeholder="Input Payment Type" required />
                            </div>
                            <div class="form-group">
                                <label for="banks">Bank</label>
                                <div class="select2-purple">
                                    <select class="form-control select2" multiple="multiple" name="banks" id="banks" data-placeholder="Select Bank" style="width: 100%;">
                                      <% banks.forEach(bank => { %>
                                            <option value="<%= bank._id %>"
                                                <% payment.banks.forEach(bankSelect => { %>
                                                    <% if(bank._id.toString() === bankSelect._id.toString()) { %>
                                                        selected
                                                    <% } %>
                                                <% }); %>
                                            >
                                                <%= bank.name %> - <%= bank.bankName %> - <%= bank.accountNumber %>
                                            </option>
                                      <% }) %>
                                    </select>
                                </div>
                            </div>
                          <!-- /.card-body -->
                          <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                          </div>
                        </form>
                      </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
        <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<%- include ../../partials/footer.ejs %>
